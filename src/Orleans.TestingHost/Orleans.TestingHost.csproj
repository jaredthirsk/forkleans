<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AssemblyName>Forkleans.TestingHost</AssemblyName>
    <PackageId>Microsoft.Forkleans.TestingHost</PackageId>
    <Title>Microsoft Orleans Testing Host Library</Title>
    <Description>Microsoft Orleans library for hosting a silo in a testing project.</Description>
    <TargetFrameworks>$(DefaultTargetFrameworks)</TargetFrameworks>
    <OrleansBuildTimeCodeGen>true</OrleansBuildTimeCodeGen>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Orleans.Persistence.Memory\Orleans.Persistence.Memory.csproj" />
    <ProjectReference Include="..\Orleans.Runtime\Orleans.Runtime.csproj" />
    <ProjectReference Include="..\Orleans.Streaming\Orleans.Streaming.csproj" />
    <ProjectReference Include="..\Orleans.Reminders\Orleans.Reminders.csproj" />
    <PackageReference Include="Microsoft.Extensions.Hosting" />
  </ItemGroup>
</Project>
