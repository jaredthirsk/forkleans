<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AssemblyName>Forkleans.TestingHost</AssemblyName>
    <PackageId>Microsoft.Forkleans.TestingHost</PackageId>
    <Title>Microsoft Orleans Testing Host Library</Title>
    <Description>Microsoft Orleans library for hosting a silo in a testing project.</Description>
    <TargetFrameworks>$(DefaultTargetFrameworks)</TargetFrameworks>
    <ForkleansBuildTimeCodeGen>true</ForkleansBuildTimeCodeGen>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Forkleans.Persistence.Memory\Forkleans.Persistence.Memory.csproj" />
    <ProjectReference Include="..\Forkleans.Runtime\Forkleans.Runtime.csproj" />
    <ProjectReference Include="..\Forkleans.Streaming\Forkleans.Streaming.csproj" />
    <ProjectReference Include="..\Forkleans.Reminders\Forkleans.Reminders.csproj" />
    <PackageReference Include="Microsoft.Extensions.Hosting" />
  </ItemGroup>
</Project>
