  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Forkleans.Serialization\Forkleans.Serialization.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>
</Project>
