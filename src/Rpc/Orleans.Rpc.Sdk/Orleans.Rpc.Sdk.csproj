<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <AssemblyName>Forkleans.Rpc.Sdk</AssemblyName>
    <RootNamespace>Forkleans.Rpc</RootNamespace>
    <Description>Orleans RPC SDK - attributes and interfaces for RPC-specific grain features</Description>
    <PackageTags>$(PackageTags);SDK;RPC</PackageTags>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Orleans.Core.Abstractions\Orleans.Core.Abstractions.csproj" />
    <ProjectReference Include="..\..\Orleans.Sdk\Orleans.Sdk.csproj" />
    <ProjectReference Include="..\..\Orleans.CodeGenerator\Orleans.CodeGenerator.csproj" PrivateAssets="None" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" />
  </ItemGroup>

</Project>