  <ItemGroup>
    <ProjectReference Include="..\..\Orleans.Runtime\Orleans.Runtime.csproj" />
  </ItemGroup>


  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>
</Project>
