<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageId>Microsoft.Forkleans.Server</PackageId>
    <Title>Microsoft Orleans Server Libraries</Title>
    <Description>Collection of Microsoft Orleans libraries and files needed on the server.</Description>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <NoPackageAnalysis>true</NoPackageAnalysis>
    <IncludeSymbols>false</IncludeSymbols>
    <IncludeSource>false</IncludeSource>
    <TargetFrameworks>$(DefaultTargetFrameworks)</TargetFrameworks>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Forkleans.Persistence.Memory\Forkleans.Persistence.Memory.csproj" />
    <ProjectReference Include="..\Forkleans.Runtime\Forkleans.Runtime.csproj" />
    <ProjectReference Include="..\Forkleans.Sdk\Forkleans.Sdk.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>
</Project>
