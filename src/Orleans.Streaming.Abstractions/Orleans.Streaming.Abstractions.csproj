<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>Forkleans.Streaming.Abstractions</AssemblyName>
    <PackageId>Forkleans.Streaming.Abstractions</PackageId>
    <Title>Microsoft Orleans Streaming Abstractions</Title>
    <Description>Streaming abstractions library for Microsoft Orleans</Description>
    <TargetFrameworks>$(DefaultTargetFrameworks)</TargetFrameworks>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RootNamespace>Forkleans</RootNamespace>
    <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
    <OrleansBuildTimeCodeGen>true</OrleansBuildTimeCodeGen>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Orleans.Core.Abstractions\Orleans.Core.Abstractions.csproj" />
  </ItemGroup>

</Project>
