{
  "benchmarkName": "MMO Scaling Test",
  "description": "Tests massive multiplayer scenarios with zone distribution and cross-zone interactions",
  "outputPath": "./results/mmo-scaling",
  "warmupDuration": "00:00:10",
  "measurementDuration": "00:02:00",
  "enableDetailedLogging": true,
  "exportFormats": ["json", "csv", "markdown"],
  
  "workloads": [
    {
      "name": "MMO-Small-Scale",
      "type": "MmoGame",
      "clientCount": 100,
      "updateRateHz": 10,
      "messageSizeBytes": 128,
      "useRawTransport": true,
      "customSettings": {
        "ZoneCount": 2,
        "GuildSize": 10,
        "CrossZoneInteractionRate": 0.05,
        "CombatPlayerRatio": 0.2,
        "PlayerActivityCycle": "00:01:00"
      }
    },
    {
      "name": "MMO-Medium-Scale",
      "type": "MmoGame", 
      "clientCount": 500,
      "updateRateHz": 8,
      "messageSizeBytes": 128,
      "useRawTransport": true,
      "customSettings": {
        "ZoneCount": 4,
        "GuildSize": 20,
        "CrossZoneInteractionRate": 0.08,
        "CombatPlayerRatio": 0.3,
        "PlayerActivityCycle": "00:01:30"
      }
    },
    {
      "name": "MMO-Large-Scale",
      "type": "MmoGame",
      "clientCount": 1000,
      "updateRateHz": 5,
      "messageSizeBytes": 128,
      "useRawTransport": true,
      "customSettings": {
        "ZoneCount": 8,
        "GuildSize": 25,
        "CrossZoneInteractionRate": 0.1,
        "CombatPlayerRatio": 0.4,
        "PlayerActivityCycle": "00:02:00"
      }
    },
    {
      "name": "MMO-Massive-Scale",
      "type": "MmoGame",
      "clientCount": 2000,
      "updateRateHz": 3,
      "messageSizeBytes": 128,
      "useRawTransport": true,
      "customSettings": {
        "ZoneCount": 10,
        "GuildSize": 30,
        "CrossZoneInteractionRate": 0.12,
        "CombatPlayerRatio": 0.5,
        "PlayerActivityCycle": "00:03:00"
      }
    }
  ],
  
  "transports": [
    {
      "name": "LiteNetLib-Unreliable",
      "type": "LiteNetLib",
      "reliable": false
    },
    {
      "name": "LiteNetLib-Reliable",
      "type": "LiteNetLib", 
      "reliable": true
    },
    {
      "name": "Ruffles-Unreliable",
      "type": "Ruffles",
      "reliable": false
    }
  ],
  
  "networkConditions": [
    {
      "name": "perfect",
      "latencyMs": 0,
      "jitterMs": 0,
      "packetLoss": 0.0,
      "bandwidth": 0
    },
    {
      "name": "lan", 
      "latencyMs": 1,
      "jitterMs": 0,
      "packetLoss": 0.0,
      "bandwidth": 1000000000
    },
    {
      "name": "regional",
      "latencyMs": 30,
      "jitterMs": 5,
      "packetLoss": 0.001,
      "bandwidth": 100000000
    }
  ]
}