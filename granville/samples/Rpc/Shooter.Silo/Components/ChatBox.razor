        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2px;
    }
    
    .sender-name {
        font-weight: 600;
        font-size: 0.8rem;
        color: #adb5bd;
    }
    
    .silo-sender {
        color: #20c997 !important;
        font-weight: 700;
    }
    
    .message-time {
        font-size: 0.7rem;
        color: #6c757d;
        opacity: 0.8;
    }
    
    .message-content {
        color: #e9ecef;
        font-size: 0.85rem;
        line-height: 1.4;
        word-wrap: break-word;
    }
    
    .chat-input {
        padding: 8px;
        background: rgba(52, 58, 64, 0.5);
        border-top: 1px solid #495057;
        border-radius: 0 0 8px 8px;
    }
    
