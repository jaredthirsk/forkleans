# Fix missing using statements in test files
param(
    [string]$Path = "."
)

$files = Get-ChildItem -Path $Path -Recurse -Filter "*.cs" | Where-Object {
    $content = Get-Content $_.FullName -Raw
    $content -match "IGrain" -and $content -notmatch "using Forkleans;"
}

foreach ($file in $files) {
    Write-Host "Fixing: $($file.FullName)"
    $content = Get-Content $file.FullName -Raw
    
    # Check if it already has a using section
    if ($content -match "^using ") {
        # Add after the first using statement
        $content = $content -replace "(using [^;]+;)", "`$1`nusing Forkleans;"
    } else {
        # Add at the beginning
        $content = "using Forkleans;`n" + $content
    }
    
    # Remove duplicate using statements
    $lines = $content -split "`n"
    $uniqueLines = $lines | Select-Object -Unique
    $content = $uniqueLines -join "`n"
    
    Set-Content -Path $file.FullName -Value $content -NoNewline
}

Write-Host "Fixed $($files.Count) files"