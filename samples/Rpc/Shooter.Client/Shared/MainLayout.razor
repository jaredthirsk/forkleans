@namespace Shooter.Client.Shared
@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar @(_sidebarCollapsed ? "sidebar-collapsed" : "")">
        <NavMenu />
    </div>

    <main class="@(_sidebarCollapsed ? "main-expanded" : "")">
        <div class="top-row px-4">
            <button class="btn btn-link sidebar-toggle" @onclick="ToggleSidebar" title="Toggle sidebar">
                <span class="oi oi-menu"></span>
            </button>
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private bool _sidebarCollapsed = true;

    private void ToggleSidebar()
    {
        _sidebarCollapsed = !_sidebarCollapsed;
    }
}