<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
    <!-- Disable Orleans code generation -->
    <Orleans_DesignTimeBuild>true</Orleans_DesignTimeBuild>
  </PropertyGroup>

  <ItemGroup>
    <!-- Use central package versions from Directory.Packages.props -->
    <PackageReference Include="Microsoft.NET.Test.Sdk" />
    <PackageReference Include="xunit" />
    <PackageReference Include="xunit.runner.visualstudio">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Moq" VersionOverride="4.20.72" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
    <PackageReference Include="Microsoft.Extensions.Options" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\src\Rpc\Orleans.Rpc.Security\Orleans.Rpc.Security.csproj" />
    <ProjectReference Include="..\..\..\src\Rpc\Orleans.Rpc.Abstractions\Orleans.Rpc.Abstractions.csproj" />
  </ItemGroup>

</Project>
