<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <DefineConstants>$(DefineConstants);TESTER_SQLUTILS</DefineConstants>
    <TargetFrameworks>$(TestTargetFrameworks)</TargetFrameworks>
    <ForkleansBuildTimeCodeGen>true</ForkleansBuildTimeCodeGen>
  </PropertyGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="Benchmarks.AdoNet" />
  </ItemGroup>

  <ItemGroup>
    <!--<PackageReference Include="Microsoft.Data.SqlClient" Version="2.1.1" />-->
    <!--<PackageReference Include="MySqlConnector" Version="1.2.1" />-->
    <PackageReference Include="System.Data.SqlClient" />
    <!--<PackageReference Include="Microsoft.Data.Sqlite" Version="5.0.2" />-->
    <PackageReference Include="Npgsql" />
    <PackageReference Include="MySql.Data" />
    <PackageReference Include="System.Drawing.Common" /> <!-- For some reason it's a dependency of MySql.Data. We want to force it to a specific version -->
    <PackageReference Include="System.Diagnostics.PerformanceCounter" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" />
    <PackageReference Include="Xunit.SkippableFact" />
    <PackageReference Include="xunit" />
    <PackageReference Include="xunit.runner.visualstudio">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Compile Include="$(SourceRoot)src\AdoNet\Shared\Storage\*.cs" LinkBase="Storage" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\src\AdoNet\Forkleans.Clustering.AdoNet\Forkleans.Clustering.AdoNet.csproj" />
    <ProjectReference Include="..\..\..\src\AdoNet\Forkleans.Persistence.AdoNet\Forkleans.Persistence.AdoNet.csproj" />
    <ProjectReference Include="..\..\..\src\AdoNet\Forkleans.Reminders.AdoNet\Forkleans.Reminders.AdoNet.csproj" />
    <ProjectReference Include="$(SourceRoot)test\TesterInternal\TesterInternal.csproj" />
    <ProjectReference Include="..\..\..\src\Forkleans.Reminders\Forkleans.Reminders.csproj" />
    <ProjectReference Include="..\..\..\src\AdoNet\Forkleans.Streaming.AdoNet\Forkleans.Streaming.AdoNet.csproj" />
    <ProjectReference Include="..\..\..\src\Forkleans.Streaming\Forkleans.Streaming.csproj" />
    <ProjectReference Include="..\..\..\src\AdoNet\Forkleans.GrainDirectory.AdoNet\Forkleans.GrainDirectory.AdoNet.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="$(SourceRoot)src\AdoNet\**\*.sql" Link="%(Filename)%(Extension)">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>
